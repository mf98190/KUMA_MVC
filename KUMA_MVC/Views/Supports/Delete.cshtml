<div class="card">
    <div class="card-header">
        Delete <strong>帳戶管理</strong>
    </div>
    <div class="card-body card-block">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.AspNetUser.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AspNetUser.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Status.StatusName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Status.StatusName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SupportCategory.SupportCategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SupportCategory.SupportCategoryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SupportTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SupportTitle)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SupportContent)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SupportContent)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SupportTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SupportTime)
            </dd>

        </dl>
        <div class="Segment__ButtonWrapper">
            <a href="/account/addresses"
               class="btn btn-outline-secondary btn-lg btn-block"
               data-toggle="modal"
               data-target="#Dcn">
                Confirm
            </a>

            <div id="Dcn"
                 class="modal right fade bd-example-modal-xl"
                 tabindex="-1"
                 role="dialog"
                 aria-labelledby="myExtraLargeModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <h3>Are you sure you want to delete this?</h3>
                            <div class="form-actions no-color">
                                <dt>
                                    @Html.DisplayNameFor(model => model.AspNetUser.Email)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.AspNetUser.Email)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Status.StatusName)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Status.StatusName)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.SupportTitle)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.SupportTitle)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.SupportContent)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.SupportContent)
                                </dd>
                                <br />
                                <input type="submit" value="Delete" class="btn btn-danger btn-lg btn-block" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
